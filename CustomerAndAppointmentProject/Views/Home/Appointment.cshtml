@model CustomerAndAppointmentProject.Models.AppointmentEntity
@using CustomerAndAppointmentProject.StaticVariables
@{
    ViewData["Title"] = "New Appointment";
    bool admin = false;
    string fullName = "";
    string email = "";
    if(ViewData["admin"] != null)
    {
        admin = (bool)ViewData["admin"];
    }
    if(ViewData["fullName"] != null)
    {
        fullName = (string)ViewData["fullName"];
    }
    if(ViewData["email"] != null)
    {
        email = (string)ViewData["email"];
    }
}

<h1>New Appointment</h1>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Appointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (admin) {
                <div class="form-group">
                    <label asp-for="Fullname" class="control-label"></label>
                    <input asp-for="Fullname" class="form-control" />
                    <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="Fullname" class="control-label"></label>
                    <input readonly="readonly" asp-for="Fullname" class="form-control" value="@fullName" />
                    <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input readonly="readonly" asp-for="Email" class="form-control" value="@email" />
                <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="AppointmentDate" class="control-label"></label>
                <input asp-for="AppointmentDate" class="form-control" value="@DateTime.Today.ToString("dd-MM-yyyy")/>
                <span asp-validation-for="ApointmenetDate" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <label asp-for="Notes"  class="control-label"></label>
                <input asp-for="Notes" class="form-control" value="N/A"/>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-danger" href="/" role="button">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
