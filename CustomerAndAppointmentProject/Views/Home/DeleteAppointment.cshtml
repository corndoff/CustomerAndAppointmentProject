@model CustomerAndAppointmentProject.Models.AppointmentEntity

@{
    bool admin = false;
    if (ViewData["admin"] != null)
    {
        admin = (bool)ViewData["admin"];
    }
    ViewData["Title"] = "DeleteAppointment";
}

<h1>DeleteAppointment</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <br />
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fullname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fullname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AppointmentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppointmentDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
    
    <form asp-action="DeleteAppointment">
        <input type="submit" value="Delete Appointment" class="btn btn-danger btn-sm" />
        @if (admin)
        {
            <!--<a class="btn btn-primary btn-sm" asp-action="Appointments">Back to List</a>-->
            @Html.ActionLink("Back to List", "Appointments",
        new { @class = "btn btn-primary btn-sm" })
        }
        else
        {
            <!--<a class="btn btn-primary btn-sm" asp-action="PatientAppointments">Back to List</a>
            -->
            
            @Html.ActionLink("Back to List", "PatientAppointments",
        new { email=Model.Email },
        new { @class = "btn btn-primary btn-sm" })
        }
    </form>
</div>
