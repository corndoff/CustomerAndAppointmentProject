@model IEnumerable<CustomerAndAppointmentProject.Models.UserEntity>
@using CustomerAndAppointmentProject.StaticVariables

@{
    ViewData["Title"] = "Patients";
}

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fullname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", 
                new { id=item.Id },
                new { @class = "btn btn-primary btn-sm" })
                @if(item.Id != StaticVariables.User.Id)
                {   
                @Html.ActionLink("Delete", "Delete", 
                new { id=item.Id },
                new { @class = " btn btn-danger btn-sm"})
            }
            </td>
        </tr>
}
    </tbody>
</table>
